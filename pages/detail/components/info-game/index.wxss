page{
  padding-bottom: 120rpx;
}

.detail-info__info, .detail-info__desc {
  padding: 20rpx 30rpx;
}

.detail-info__info {
  padding-top: 10rpx;
  margin: 0 !important;
}

.detail-block {
  background-color: #fff;
  padding: 20rpx 26rpx;
}

.detail-block + .detail-block{
  margin-top: 26rpx;
}

.detail-info__cover {
  padding: 0;
  margin: 0;
}

.detail-info__cover image {
  width: 100%;
}

.info-title {
  font-size: 32rpx;
  margin-bottom: 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-title > view {
  display: flex;
  align-items: center;
  position: relative;
  transform: translateY(6rpx);
}

.info-basic {
  font-size: 28rpx;
}

.info-basic__item {
  margin: 10rpx 0;
  display: flex;
  align-items: base-line;
}

.info-basic__item-label, .info-basic__item-content {
  display: inline-block;
}

.info-basic__item-label {
  color: #858585;
  width: 150rpx;
}

/* .detail-info__desc {
  margin: 26rpx 0;
  padding: 20rpx 26rpx;
} */

.detail-block__title {
  text-align: center;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.detail-block__content {
  text-indent: 56rpx;
}

.comment-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.comment-item, .empty-comments {
  text-indent: 0;
}

.comment-item + .comment-item {
  border-top: 1px solid #f1f1f1;
}

.comment-item__avatar {
  padding: 0 10rpx;
  flex: 1;
}

.comment-item__avatar image {
  width: 62rpx;
  height: 62rpx;
  border-radius: 50%;
  display: block;
}

.comment-item__info {
  padding-left: 10rpx;
  flex: 9;
}

.comment-item__info-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  font-size: 24rpx;
}

.comment-item__info-header > text:nth-of-type(2) {
  color: #858585;
}

.empty-comments {
  color: #858585;
  text-align: center;
  margin: 60rpx 0 20rpx 0;
  font-size: 24rpx;
}
