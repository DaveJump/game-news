.comment-input {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 10rpx 20rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-top: 1px solid #f3f3f3;
}

.comment-input input {
  width: calc(100% - 28rpx);
  padding: 14rpx;
  font-size: 28rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
}
