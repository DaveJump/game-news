@import "/style/button.wxss";

.cover-info {
  position: relative;
  height: 550rpx;
  /* box-shadow: 0 0 3px rgba(0, 0, 0, 0.15); */
  background-color: #fff;
}

.cover__image {
  width: 100%;
}

.cover-info__cover {
  position: relative;
  overflow: hidden;
}

.cover__mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.4;
  z-index: 5;
}

.cover__split-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 300%;
  height: 100%;
  background-color: rgba(255, 255, 255, 5);
  z-index: 10;
  transform: translate3d(-12%, 45%, 0) rotateZ(-10deg);
}

.cover-info__user {
  position: absolute;
  top: 50%;
  height: 188rpx;
  width: 100%;
  left: 0;
  transform: translateY(-26%);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  z-index: 20;
}

.cover-info__operation {
  position: absolute;
  bottom: 10px;
  z-index: 20;
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 5px 0;
  box-sizing: border-box;
}

.operation__text {
  font-size: 25rpx;
  color: #858585;
}

.cover-info__operation image {
  width: 42rpx;
  height: 42rpx;
}

.operation__about, .operation__collection {
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.login-button, .user__avatar {
  display: flex;
  text-align: center;
  justify-content: center;
  align-items: center;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  background-color: #fff !important;
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.15);
  color: #9c9c9c;
  padding: 0;
}

.user__nick-name {
  font-size: 32prx;
}
